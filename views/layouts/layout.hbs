<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TopicQuests Foundation</title>
    <link href="/css/bootstrap.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/css/font-awesome.min.css" media="all" rel="stylesheet" type="text/css" />
    <link href="/css/jquery-ui.css" media="all" rel="stylesheet" type="text/css" />
    <!--<link href="/css/leaflet.css" media="all" rel="stylesheet" type="text/css" />-->
    <style>
        body {
            padding-top: 50px;
            padding-bottom: 20px;
        }
    </style>
    <script src="/js/jquery-1.11.1.min.js" type="text/javascript"></script>

    <script>
       jQuery(document).ready(function ($) {
           //TODO
       });
    </script>

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">TopicQuests Portal</a>
        </div> <!-- navbar-header -->
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/contact">Contact</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Applications <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                       {{#each appmenu}}
                           {{#if isNew}}
                               <li><a target='new' href="{{ url }}">{{ name }}</a></li>
                           {{else}}
                               <li><a href="{{ url }}">{{ name }}</a></li>
                           {{/if}}
                       {{/each}}
                    </ul>
                </li>
                {{#if isAdmin}}
                    <li><a href="/admin">Admin</a></li>
                {{/if}}
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        {{#if isAuthenticated }}
                            <li><a href="/logout">Logout</a></li>
                            <li><a href="/profile/{{email}}">Profile</a></li>
                        {{else}}
                            <li><a href="/signup">Signup</a></li>
                            <li><a href="/login">Login</a></li>
                        {{/if}}

                    </ul>
                </li>
            </ul>
            <form class="navbar-form" role="search" action = "/search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </form>
        </div><!--/.nav-collapse -->
        <!-- <br/> <br/> -->
    </div> <!-- /container -->
</div> <!-- navbar -->
<div class="container">
    {{{body}}}
</div> <!-- container -->
<script src="/js/bootstrap.js"></script>
<script src="/js/jquery-columnnav-1.1.0.js"></script>
<script src="/js/conversation.js"></script>
<script src="/js/jstree.js"></script>
</body>
</html>
